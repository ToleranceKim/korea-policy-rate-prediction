# MPB Stance Mining Crawler 환경 설정
# .env.example을 .env로 복사하여 사용하세요

# Python 환경 경로 (시스템에 맞게 수정)
PYTHON_PATH=/opt/anaconda3/envs/ds_env/bin/python
SCRAPY_PATH=/opt/anaconda3/envs/ds_env/bin/scrapy

# 크롤링 설정
DEFAULT_START_YEAR=2015
DEFAULT_END_YEAR=2025
DEFAULT_END_MONTH=8

# 성능 설정
MAX_WORKERS=10
REQUEST_TIMEOUT=1800  # 30분
PAGE_LIMIT=10  # 테스트 모드용

# 로그 설정
LOG_LEVEL=INFO
LOG_DIR=logs/

# 데이터 디렉터리
DATA_DIR=data/
MONTHLY_DIR=data/monthly/
MERGED_DIR=data/merged/